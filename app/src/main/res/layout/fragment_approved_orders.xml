<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="ApprovedOrders">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/approvedOrdersSwipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/approvedOrdersRV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layoutAnimation="@anim/layout_fall_down" />


    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationViewAprrovedOrders"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toTopOf="@+id/approvedOrdersSwipeRefreshLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/approvedOrdersSwipeRefreshLayout"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:visibility="gone"
        app:lottie_rawRes="@raw/empty_list" />

    <TextView
        android:id="@+id/notFoundTVApproved"
        android:layout_width="207dp"
        android:layout_height="74dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/work_sans"
        android:text="@string/not_found_text"
        android:textAlignment="center"
        android:textColor="@color/DarkGray"
        android:textSize="@dimen/large_text"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/animationViewAprrovedOrders" />


</androidx.constraintlayout.widget.ConstraintLayout>